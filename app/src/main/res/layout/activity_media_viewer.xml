<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/mediaViewerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finishViewerButton"
            android:layout_marginStart="@dimen/activity_horizontal_button_margin"
            android:layout_marginTop="@dimen/activity_horizontal_button_margin"
            app:srcCompat="@drawable/ic_close"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveImageButton"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_horizontal_button_margin"
            app:srcCompat="@drawable/ic_file_download"/>

</RelativeLayout>

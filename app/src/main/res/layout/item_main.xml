<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/main_color_bar"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:alpha="0.5"
            android:measureAllChildren="true"/>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/list_item_padding"
            android:paddingLeft="@dimen/list_item_padding"
            android:paddingRight="@dimen/list_item_padding"
            android:paddingTop="@dimen/list_item_padding"
            >

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconFrame">

            <ImageView
                    android:id="@+id/main_icon"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:contentDescription="@string/contentDescription_main_icon"/>

            <ImageView
                    android:id="@+id/rt_icon"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="end|bottom"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:contentDescription="@string/contentDescription_rt_icon"/>

        </FrameLayout>

        <TextView
                android:id="@+id/main_account_name"
                android:layout_toEndOf="@id/iconFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

        <TextView
                android:id="@+id/main_screen_name"
                android:layout_toEndOf="@id/main_account_name"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

        <ImageView
                android:id="@+id/main_lock_icon"
                android:layout_toEndOf="@id/main_screen_name"
                android:layout_above="@+id/main_description"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginBottom="@dimen/list_item_padding"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:visibility="invisible"
                android:src="@drawable/ic_lock"
                android:contentDescription="@string/contentDescription_main_lock_icon"/>

        <TextView
                android:id="@+id/main_description"
                android:layout_toEndOf="@id/iconFrame"
                android:layout_below="@id/main_screen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
                android:id="@+id/main_via_and_date"
                android:layout_toEndOf="@id/iconFrame"
                android:layout_below="@id/main_description"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageFrame"
                android:layout_toEndOf="@id/iconFrame"
                android:layout_below="@id/main_via_and_date">


            <ImageView
                    android:id="@+id/main_image1"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="@string/contentDescription_image"/>

            <ImageView
                    android:id="@+id/main_image2"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_image1"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="@string/contentDescription_image"/>

            <ImageView
                    android:id="@+id/main_image3"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_image2"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="@string/contentDescription_image"/>

            <ImageView
                    android:id="@+id/main_image4"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_image3"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="@string/contentDescription_image"/>


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>

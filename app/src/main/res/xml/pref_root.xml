<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="category_front"
        app:title="Display Setting">

        <com.ryunen344.twikot.settings.preferences.wallpaper.WallpaperPreference
            app:key="key_wallpaper"
            app:summary="Report technical issues or suggest new features"
            app:title="Wallpaper" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_about_this_app"
        app:title="about this app">

        <Preference
            app:key="key_about_this_app"
            app:title="About This App">

            <intent
                android:targetClass="com.ryunen344.twikot.settings.preferences.license.LicenseActivity"
                android:targetPackage="com.ryunen344.twikot" />

        </Preference>

        <Preference
            app:key="key_license"
            app:title="License">

            <intent
                android:targetClass="com.ryunen344.twikot.settings.preferences.license.LicenseActivity"
                android:targetPackage="com.ryunen344.twikot" />

        </Preference>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
